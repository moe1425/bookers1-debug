<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>errors prohibited this book form being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :Body %>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Update Book' %>
<% end %>


<%= link_to 'Show', @book %> |
